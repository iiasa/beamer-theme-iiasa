\RequirePackage[no-math]{fontspec}

% Font sizes and weights for structural texts
\setbeamerfont{title}{size=\Huge, series=\bfseries}
\setbeamerfont{frametitle}{size=\LARGE, series=\bfseries}
\setbeamerfont{section title}{size=\Huge, series=\bfseries}

% Default font: Tahoma
\IfFontExistsTF{Tahoma}{
  \setsansfont[
    Mapping=tex-text,
    AutoFakeSlant=0.3,
    BoldFont={Tahoma Bold},
    ]{Tahoma}

  \setbeamerfont{title}{series=\normalfont}
  \setbeamerfont{frametitle}{series=\normalfont}
  \setbeamerfont{section title}{series=\normalfont}
}{
  \PackageWarning{beamerthemeiiasa}{%
    Could not find Tahoma font; falling back to Fira Sans%
  }

  % Imitate the 'metropolis' theme
  \setsansfont[
    Extension = .ttf,%
    UprightFont = FiraSans-Light,%
    ItalicFont = FiraSans-LightItalic,%
    BoldFont = FiraSans-Regular,%
    BoldItalicFont = FiraSans-Italic]%
    {FiraSans}%
  \setmonofont[
    Extension = .ttf,%
    UprightFont = FiraMono-Regular,%
    BoldFont = FiraMono-Medium]%
    {FiraMono}%
}
